<div class="container">
<h3><%= @restaurant.name %></h3>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.rating %> <%= review.content %> <%= link_to review_path(review), method: :delete, data: {confirm: "Are you sure?"} do %><i class="fas fa-trash-alt"></i><% end %></li>
    <% end %>
</ul>
<%= link_to restaurants_path do%><i class="fas fa-home"></i><% end %>
<%= link_to new_restaurant_review_path(@restaurant) do %><i class="fas fa-pencil-alt"></i><% end %>
</div>
